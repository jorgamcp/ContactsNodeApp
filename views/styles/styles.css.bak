* {
  margin: 0px;
  padding: 0px;
}

body {
  overflow-x: hidden;
}
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: white;
  margin: 0 auto;
}
#background-modal {
  display: none;
  width: 100%;
  height: 100vh;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1;
}
#modal {
  width: 25%;
  transform: translateX(300%);
  height: 100vh;
  background-color: rgb(252, 252, 252);
}
#modal > .titulo {
  padding: 10px;
  border-bottom: 1px solid #ececec;
}
.titulo h3 {
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  font-weight: 100;
  font-size: 25px;
  text-align: center;
  margin: 0 auto;
  line-height: 2;
}
nav {
  display: flex;
  flex-direction: row;
  width: 100%;
  position: fixed;
  height: 50px;
  background-color: white;
  justify-content: flex-start;
  box-shadow: 0px 4px 10px #888888;
}
nav h3 {
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  font-size: 150%;
  font-weight: 100;
  padding: 10px;
}

table {
  border-collapse: collapse;
  width: 90%;
  margin: 0 auto;
  text-align: center;
}

table,
th,
td {
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
}
table th {
  font-size: 20px;
}

a {
  text-decoration: none;
}

.app-container{
  margin-top:50px;
}


#buttons {
  display: flex;
  width: 100%;
  margin: 10px 15px;
}
#buttons button,
#btnenv {
  background-color: #4caf50; /* Green */
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;

  font-family: "Segoe UI";
  font-size: 110%;
  font-weight: 100;
}
#buttons button:hover {
  background-color: rgb(184, 4, 184);
  cursor: pointer;
}

#mycontacttable td,
#mycontacttable th {
  border: 1px solid rgb(182, 180, 180);
  padding: 8px;
}
#mycontacttable th {
  background-color: rgb(255, 255, 255);
}
#mycontacttable tr:nth-child(odd) {
  background-color: #ececec;
}

#mycontacttable tr:nth-child(even) {
  background-color: #d3d2d2;
}

.formulario {
  display: flex;
  flex-direction: column;
  margin: 50px;
}

.formulario label {
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  font-weight: 100;
  font-size: 150%;
  text-align: center;
}
.formulario input {
  margin-bottom: 20px;
  width: 100%;
  height: 30px;
  font-size: 20px;
  padding: 4px;
}
#btnenv {
  margin-top: 10px;
}

#close {
  height: 50px;
  width: 50px;
  background-color: #f7f0f0;
  border-radius: 5px;
  position: relative;
}
#close::after {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  content: "\274c"; /* use the hex value here... */
  font-size: 20px;
  line-height: 50px;
  text-align: center;
}

.container-title-close {
  display: flex;
  flex-direction: row;
}
